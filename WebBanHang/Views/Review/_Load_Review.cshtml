@model IEnumerable<WebBanHang.Models.EF.ReviewProduct>

<div class="reviews-section">
    <h4 class="mb-4">Đánh giá sản phẩm (@ViewBag.Count)</h4>
    
    @if (Model != null && Model.Any())
    {
        <div class="reviews-list">
            @foreach (var item in Model)
            {
                <div class="review-item card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="reviewer-avatar me-3">
                                <div class="avatar-circle bg-primary text-white">
                                    @item.FullName.Substring(0, 1).ToUpper()
                                </div>
                            </div>
                            <div class="reviewer-info">
                                <h6 class="mb-1">@item.FullName</h6>
                                <div class="text-muted small">
                                    <i class="far fa-clock me-1"></i>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="review-rating mb-3">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= item.Rate ? "text-warning" : "text-muted")"></i>
                            }
                        </div>

                        <div class="review-content">
                            <p class="mb-0">@item.Content</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>Chưa có đánh giá nào cho sản phẩm này.
        </div>
    }
</div>

<style>
    .reviews-section {
        margin-top: 2rem;
    }

    .review-item {
        transition: all 0.3s ease;
    }

    .review-item:hover {
        transform: translateY(-2px);
    }

    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .review-rating {
        font-size: 1.1rem;
    }

    .review-rating i {
        margin-right: 0.2rem;
    }

    .review-content {
        line-height: 1.6;
        color: #444;
    }

    .reviewer-avatar {
        flex-shrink: 0;
    }

    .reviewer-info h6 {
        margin-bottom: 0;
        color: #333;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .text-muted {
        color: #ddd !important;
    }
</style>
