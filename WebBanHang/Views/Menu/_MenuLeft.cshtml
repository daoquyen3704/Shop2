@model IEnumerable<WebBanHang.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
<ul class="list-unstyled">
    @foreach (var item in Model)
    {
        if (ViewBag.CateId == item.Id)
        {
    <li class="active mb-2"><a href="/danh-muc-san-pham/@item.Alias-@(item.Id)" class="d-flex justify-content-between text-dark">@item.Title</a></li>
        }
        else
        {
            <li class="mb-2"><a href="/danh-muc-san-pham/@item.Alias-@(item.Id)" class="d-flex justify-content-between text-dark">@item.Title</a></li>
        }
    }
</ul>
