@model IEnumerable<WebBanHang.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="container-fluid categories pb-5">
        <div class="container pb-5">
            <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
                <h1 class="display-5 text-capitalize mb-3">Danh Mục <span class="text-primary">Đồng Hồ</span></h1>
                <p class="mb-0">
                    Khám phá bộ sưu tập đồng hồ cao cấp của chúng tôi với đa dạng mẫu mã và thương hiệu nổi tiếng thế giới.
                </p>
            </div>
            <div class="categories-carousel owl-carousel wow fadeInUp" data-wow-delay="0.1s">
                @foreach (var item in Model)
                {
                    <div class="categories-item p-4">
                        <div class="categories-item-inner">
                            <div class="categories-img rounded-top">
                                <img src="@item.Icon" class="img-fluid w-100 rounded-top" alt="@item.Title" />
                            </div>
                            <div class="categories-content rounded-bottom p-4">
                                <h4>@item.Title</h4>
                               
                                <div class="row gy-2 gx-0 text-center mb-4">
                                    <p class="card-text text-muted" style="min-height: 60px;">
                                        @item.SeoDescription
                                    </p>
                                </div>
                                <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)" class="btn btn-primary rounded-pill d-flex justify-content-center py-3">Mua Ngay</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
