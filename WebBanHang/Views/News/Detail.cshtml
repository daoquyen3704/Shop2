@model WebBanHang.Models.EF.News
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.SeoDescription = Model.SeoDescription;
    ViewBag.SeoKeyWord = Model.SeoKeywords;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .blog-detail-content {
        max-width: 100%;
        margin: 0 auto;
        overflow-x: hidden;
    }

    .ck-content {
        font-family: 'Lato', sans-serif;
        font-size: 16px;
        line-height: 1.6;
        color: #666;
        max-width: 100%;
        word-wrap: break-word;
        overflow-x: hidden;
    }
    
    .ck-content p {
        margin: 0 0 1em 0;
        font-weight: 400;
        text-align: justify;
        max-width: 100%;
        white-space: normal;
    }
    
    .ck-content img {
        max-width: 100% !important;
        height: auto !important;
        margin: 1em auto;
        border-radius: 8px;
        display: block;
    }
    
    .ck-content figure {
        max-width: 100% !important;
        margin: 1em auto;
        text-align: center;
    }

    .ck-content figure img {
        margin: 0 auto;
    }

    .ck-content figure figcaption {
        font-size: 0.9em;
        color: #666;
        margin-top: 0.5em;
    }

    .ck-content table {
        width: 100% !important;
        max-width: 100% !important;
        margin: 1em 0;
        border-collapse: collapse;
        table-layout: fixed;
        word-wrap: break-word;
    }

    .ck-content table td,
    .ck-content table th {
        padding: 8px;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    .ck-content iframe {
        max-width: 100% !important;
        margin: 1em auto !important;
        display: block;
    }

    /* Xử lý các thẻ văn bản khác */
    .ck-content div,
    .ck-content span,
    .ck-content li,
    .ck-content a {
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    /* Đảm bảo các đoạn văn bản dài được xuống dòng đúng */
    .ck-content * {
        max-width: 100%;
        word-break: break-word;
    }

    /* Xử lý khoảng cách giữa các đoạn */
    .ck-content > * + * {
        margin-top: 1em;
    }

    .ck-content br {
        display: none;
    }

    .ck-content br + br {
        display: block;
        margin: 0.5em 0;
    }

    @@media screen and (max-width: 768px) {
        .ck-content {
            font-size: 15px;
        }

        .ck-content img,
        .ck-content figure,
        .ck-content iframe {
            width: 100% !important;
            height: auto !important;
        }

        .ck-content p,
        .ck-content div,
        .ck-content span {
            word-wrap: break-word;
            overflow-wrap: break-word;
        }
    }
</style>

<!-- Blog Detail Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Blog Detail -->
            <div class="col-lg-8">
                <div class="mb-5 blog-detail-content">
                    <div class="position-relative">
                        @*<img class="img-fluid rounded w-100" src="@Model.Image" alt="@Model.Title">*@
                        <div class="position-absolute bg-primary rounded p-4 d-flex flex-column align-items-center justify-content-center" style="top: 0; right: 0;">
                            <p class="text-white mb-0">
                                @(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("dd MMM yyyy") : "")
                            </p>
                        </div>
                    </div>
                    <div class="bg-light rounded p-4">
                        <div class="d-flex mb-3">
                            <small class="me-3"><i class="far fa-user text-primary me-2"></i>Admin</small>
                            <small class="me-3"><i class="far fa-folder text-primary me-2"></i>@Model.SeoTitle</small>
                        </div>
                        <h1 class="mb-4">@Model.Title</h1>
                        <div class="mb-4">
                            <p class="lead">@Model.Description</p>
                        </div>
                        <div class="mb-4 ck-content">
                            @Html.Raw(Model.Detail)
                        </div>
                        <!-- Tags -->
                        <div class="d-flex justify-content-between border-top border-bottom py-3 mb-4">
                            <div class="d-flex align-items-center">
                                @*<span class="text-primary me-2">Tags:</span>
                                @if (!string.IsNullOrEmpty(Model.SeoKeywords))
                                {
                                    var tags = Model.SeoKeywords.Split(',');
                                    foreach (var tag in tags)
                                    {
                                        <a href="#" class="btn btn-sm btn-outline-primary me-2">@tag.Trim()</a>
                                    }
                                }*@
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="text-primary me-2">Share:</span>
                                <a class="btn btn-outline-primary btn-square me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-outline-primary btn-square me-2" href="#"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-outline-primary btn-square me-2" href="#"><i class="fab fa-instagram"></i></a>
                                <a class="btn btn-outline-primary btn-square" href="#"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
            </div>
        </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Search -->
                <div class="mb-5">
                    <div class="input-group">
                        <input type="text" class="form-control p-3" placeholder="Tìm kiếm...">
                        <button class="btn btn-primary px-4"><i class="fa fa-search"></i></button>
                    </div>
                </div>

                <!-- Categories -->
                <div class="mb-5">
                    <h3 class="mb-4">Danh mục</h3>
                    <div class="d-flex flex-column justify-content-start bg-light rounded p-4">
                        <a class="h5 text-decoration-none mb-3" href="#"><i class="fa fa-angle-right me-2"></i>Đồng hồ nam</a>
                        <a class="h5 text-decoration-none mb-3" href="#"><i class="fa fa-angle-right me-2"></i>Đồng hồ nữ</a>
                        <a class="h5 text-decoration-none mb-3" href="#"><i class="fa fa-angle-right me-2"></i>Đồng hồ đôi</a>
                        <a class="h5 text-decoration-none mb-3" href="#"><i class="fa fa-angle-right me-2"></i>Phụ kiện</a>
                    </div>
                </div>

                <!-- Recent Posts -->
                <div class="mb-5">
                    <h3 class="mb-4">Bài viết gần đây</h3>
                    <div class="bg-light rounded p-4">
                        <div class="d-flex mb-3">
                            <img src="~/Content/assets/img/blog-1.jpg" class="img-fluid rounded" style="width: 100px; height: 100px; object-fit: cover;" alt="">
                            <a href="" class="h5 d-flex align-items-center bg-light px-3 mb-0">Hướng dẫn chọn đồng hồ phù hợp
                            </a>
                        </div>
                        <div class="d-flex mb-3">
                            <img src="~/Content/assets/img/blog-2.jpg" class="img-fluid rounded" style="width: 100px; height: 100px; object-fit: cover;" alt="">
                            <a href="" class="h5 d-flex align-items-center bg-light px-3 mb-0">Top 5 thương hiệu đồng hồ cao cấp
                            </a>
                        </div>
                        <div class="d-flex">
                            <img src="~/Content/assets/img/blog-3.jpg" class="img-fluid rounded" style="width: 100px; height: 100px; object-fit: cover;" alt="">
                            <a href="" class="h5 d-flex align-items-center bg-light px-3 mb-0">Bảo dưỡng đồng hồ đúng cách
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Tags -->
                <div class="mb-5">
                    <h3 class="mb-4">Tags</h3>
                    <div class="d-flex flex-wrap m-n1">
                        <a href="" class="btn btn-outline-primary m-1">Đồng hồ nam</a>
                        <a href="" class="btn btn-outline-primary m-1">Đồng hồ nữ</a>
                        <a href="" class="btn btn-outline-primary m-1">Rolex</a>
                        <a href="" class="btn btn-outline-primary m-1">Omega</a>
                        <a href="" class="btn btn-outline-primary m-1">Bảo dưỡng</a>
                        <a href="" class="btn btn-outline-primary m-1">Phong cách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog Detail End -->
