@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-user me-2"></i>@User.Identity.Name
            </a>
            <div class="dropdown-menu m-0">
                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                    <i class="fas fa-user-circle me-2"></i>Thông tin tài khoản
                </a>
                <a class="dropdown-item" href="@Url.Action("Orders", "Account")">
                    <i class="fas fa-shopping-bag me-2"></i>Đơn hàng của tôi
                </a>
                <a class="dropdown-item" href="@Url.Action("Wishlist", "Account")">
                    <i class="fas fa-heart me-2"></i>Sản phẩm yêu thích
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                </a>
            </div>
        </div>
    }
}
else
{
    <div class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
            <i class="fas fa-user me-2"></i>Tài khoản
        </a>
        <div class="dropdown-menu m-0">
            <a class="dropdown-item" href="@Url.Action("Login", "Account")">
                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
            </a>
            <a class="dropdown-item" href="@Url.Action("Register", "Account")">
                <i class="fas fa-user-plus me-2"></i>Đăng ký
            </a>
        </div>
    </div>
}
