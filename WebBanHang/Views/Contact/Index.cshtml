@model WebBanHang.Models.EF.Contact

@{
    ViewBag.Title = "Liên Hệ";
}

<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize text-primary mb-3">Liên Hệ Với Chúng Tôi</h1>
            <p class="mb-0">Nếu bạn có bất kỳ câu hỏi nào về sản phẩm hoặc dịch vụ, hãy để lại lời nhắn. Chúng tôi sẽ phản hồi sớm nhất có thể!</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <div class="row g-5">
            <!-- Contact Info Section -->
            <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row g-5">
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fas fa-map-marker-alt fa-2x"></i>
                            </div>
                            <div>
                                <h4>Địa chỉ</h4>
                                <p class="mb-0">123 Nguyễn Huệ, Q.1, TP.HCM</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <div>
                                <h4>Email</h4>
                                <p class="mb-0">info@luxurywatch.vn</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.5s">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fa fa-phone-alt fa-2x"></i>
                            </div>
                            <div>
                                <h4>Điện thoại</h4>
                                <p class="mb-0">+84 28 3456 7890</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.7s">
                        <div class="contact-add-item p-4">
                            <div class="contact-icon mb-4">
                                <i class="fab fa-facebook-messenger fa-2x"></i>
                            </div>
                            <div>
                                <h4>Messenger</h4>
                                <p class="mb-0">fb.com/luxwatchvn</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-secondary p-5 rounded">
                <h4 class="text-primary mb-4">Gửi Tin Nhắn Cho Chúng Tôi</h4>
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "row g-4" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="col-lg-12 col-xl-6">
                        <div class="form-floating">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "name", @placeholder = "Họ Tên" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            <label for="name">Họ Tên</label>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <div class="form-floating">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "email", @placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <div class="form-floating">
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Số điện thoại">
                            <label for="phone">Số điện thoại</label>
                        </div>
                    </div>
                    <div class="col-lg-12 col-xl-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="product" name="product" placeholder="Sản phẩm quan tâm">
                            <label for="product">Sản phẩm quan tâm</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @id = "message", @placeholder = "Lời nhắn", @style = "height: 160px" })
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            <label for="message">Lời nhắn</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-light w-100 py-3" type="submit">Gửi Tin Nhắn</button>
                    </div>
                }
            </div>

            <!-- Google Map -->
            <div class="rounded">
                <iframe class="rounded w-100"
                        style="height: 400px;"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.502456274235!2d106.70042397479187!3d10.774982059295161!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1f4afc1b17%3A0x90f7e0642a5c6899!2zNDY2IFbFqSBUcuG7jW5nIFbhuq1uIE5ndXnhu4VuLCBQaMaw4budbmcgNCwgUXXhuq1uIDE1LCBUaOG7pyBUaOG7pyBUaOG7qSwgSOG7kyBDaMOidSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1714033333333"
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}